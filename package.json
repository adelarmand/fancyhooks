{
  "name": "fancyhooks",
  "version": "0.0.0",
  "description": "Apply FancY conditions to React hooks",
  "main": "index.js",
  "scripts": {
    "eslint": "eslint . --ext .ts,.tsx",
    "dtslint": "dtslint --localTs node_modules/typescript/lib types",
    "test": "jest",
    "test:watch": "jest --watch --verbose"
  },
  "repository": "git@github.com:fancyreact/fancyhooks.git",
  "keywords": [
    "fancyhook",
    "react",
    "hook",
    "fancy",
    "condition"
  ],
  "author": "Adel Armand <adel.armand@gmail.com>",
  "license": "MIT",
  "private": false,
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "airbnb"
    ],
    "ignorePatterns": [
      "types",
      "lib"
    ],
    "globals": {
      "JSX": "readonly"
    },
    "env": {
      "browser": true,
      "jest": true
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".ts",
            ".tsx",
            ".js",
            ".jsx",
            ".d.ts"
          ]
        }
      }
    },
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".ts",
            ".tsx"
          ]
        }
      ],
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "ts": "never",
          "tsx": "never"
        }
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1,
          "maxBOF": 1
        }
      ],
      "import/order": [
        "error",
        {
          "newlines-between": "always"
        }
      ],
      "react/jsx-props-no-spreading": "off",
      "import/prefer-default-export": "off",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ]
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/types/tsconfig.json"
      }
    },
    "testMatch": [
      "<rootDir>/**/*.?(*.)+(spec|test).+(ts|tsx|js|jsx)"
    ],
    "transform": {
      "\\.tsx?$": "ts-jest"
    }
  },
  "devDependencies": {
    "@testing-library/react": "^12.1.3",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.179",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/parser": "^5.12.0",
    "dtslint": "^4.2.1",
    "eslint": "^8.9.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^27.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
